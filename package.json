{
    "name": "Wordle",
    "version": "0.1.0",
    "description": "Wordle.",
    "repository": "git@github.com:tetutaro/wordle.git",
    "author": "tetutaro",
    "license": "MIT",
    "main": "frontend.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "build": {
        "appId": "com.electron-flask.wordle",
        "productName": "Wordle",
        "directories": {
            "output": "dist"
        },
        "files": [
            "package.json",
            "frontend.js",
            "icons/*",
            "backend_dist/**/*"
        ],
        "mac": {
            "icon": "icons/wordle.icns",
            "target": [
                "dmg"
            ]
        },
        "win": {
            "icon": "icons/wordle.ico",
            "target": [
                "nsis"
            ]
        },
        "linux": {
            "icon": "icons/wordle.icns",
            "target": [
                "deb"
            ]
        }
    },
    "dependencies": {
        "ps-tree": "^1.2.0",
        "request": "^2.88.2",
        "request-promise-native": "^1.0.9"
    },
    "devDependencies": {
        "electron": "^17.0.1",
        "electron-builder": "^22.14.13"
    }
}
